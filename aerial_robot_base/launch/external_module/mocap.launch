<launch>

  <arg name="robot_id" default="1"/>

  <node pkg="mocap_optitrack"
    type="mocap_node"
    name="mocap_node"
    respawn="false"
    launch-prefix=""
    required="true">
    <rosparam subst_value="true">
      rigid_bodies:
         '1':
               pose: mocap/pose/1
               pose2d: mocap/ground_pose/1
               child_frame_id: baselink
               parent_frame_id: world
         '2':
               pose: mocap/pose/2
               pose2d: mocap/ground_pose/2
               child_frame_id: baselink
               parent_frame_id: world
         '3':
               pose: mocap/pose/3
               pose2d: mocap/ground_pose/3
               child_frame_id: baselink
               parent_frame_id: world
         '4':
               pose: mocap/pose/4
               pose2d: mocap/ground_pose/4
               child_frame_id: baselink
               parent_frame_id: world
      optitrack_config:
         multicast_address: 239.255.42.99
         command_port: 1510
         data_port: 1511
    </rosparam>
    <remap from="~mocap/pose" to="mocap/pose" />
  </node>

</launch>
